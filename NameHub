-- Name Hub GUI Script
local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")

-- Create ScreenGui
local player = Players.LocalPlayer
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "NameHubGui"
screenGui.Parent = player.PlayerGui
screenGui.ResetOnSpawn = false

-- Create Main Frame (scaled ~6x in area: 200x100 -> 600x300)
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 600, 0, 300)
mainFrame.Position = UDim2.new(0.5, -300, 0.5, -150)
mainFrame.BackgroundColor3 = Color3.fromRGB(10, 10, 10) -- Dark base for gradient
mainFrame.BorderSizePixel = 0
mainFrame.Parent = screenGui

-- Add Gradient
local uiGradient = Instance.new("UIGradient")
uiGradient.Color = ColorSequence.new({
    ColorSequenceKeypoint.new(0, Color3.fromRGB(0, 255, 255)), -- Cyan
    ColorSequenceKeypoint.new(1, Color3.fromRGB(255, 0, 255))  -- Magenta
})
uiGradient.Rotation = 45
uiGradient.Parent = mainFrame

-- Add Corner Radius
local uiCorner = Instance.new("UICorner")
uiCorner.CornerRadius = UDim.new(0, 12)
uiCorner.Parent = mainFrame

-- Add Glowing Effect
local uiStroke = Instance.new("UIStroke")
uiStroke.Thickness = 2
uiStroke.Color = Color3.fromRGB(0, 255, 255)
uiStroke.Transparency = 0.5
uiStroke.Parent = mainFrame

-- Create Title Label
local titleLabel = Instance.new("TextLabel")
titleLabel.Size = UDim2.new(1, 0, 0, 60)
titleLabel.Position = UDim2.new(0, 0, 0, 10)
titleLabel.BackgroundTransparency = 1
titleLabel.Text = "Name Hub"
titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255) -- White text
titleLabel.TextSize = 36
titleLabel.Font = Enum.Font.FredokaOne -- Futuristic font
titleLabel.Parent = mainFrame

-- Create Discord Button
local discordButton = Instance.new("TextButton")
discordButton.Size = UDim2.new(0, 100, 0, 50)
discordButton.Position = UDim2.new(1, 10, 0.5, -25)
discordButton.BackgroundColor3 = Color3.fromRGB(88, 101, 242) -- Discord color
discordButton.Text = "Discord"
discordButton.TextColor3 = Color3.fromRGB(255, 255, 255)
discordButton.TextSize = 24
discordButton.Font = Enum.Font.FredokaOne
discordButton.Parent = mainFrame

local discordCorner = Instance.new("UICorner")
discordCorner.CornerRadius = UDim.new(0, 10)
discordCorner.Parent = discordButton

-- Discord Button Click (Copies link to clipboard)
discordButton.MouseButton1Click:Connect(function()
    if setclipboard then
        setclipboard("https://discord.gg/4VRjtMQjsR")
        local notification = Instance.new("TextLabel")
        notification.Size = UDim2.new(0, 150, 0, 40)
        notification.Position = UDim2.new(1, 20, 0.5, 30)
        notification.BackgroundTransparency = 1
        notification.Text = "Copied!"
        notification.TextColor3 = Color3.fromRGB(0, 255, 255)
        notification.TextSize = 20
        notification.Font = Enum.Font.FredokaOne
        notification.Parent = mainFrame
        wait(1)
        notification:Destroy()
    end
end)

-- Create Loading Bar Background
local barBackground = Instance.new("Frame")
barBackground.Size = UDim2.new(0.9, 0, 0, 20)
barBackground.Position = UDim2.new(0.05, 0, 0, 180)
barBackground.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
barBackground.BorderSizePixel = 0
barBackground.Parent = mainFrame

local barCorner = Instance.new("UICorner")
barCorner.CornerRadius = UDim.new(0, 6)
barCorner.Parent = barBackground

-- Create Loading Bar
local loadingBar = Instance.new("Frame")
loadingBar.Size = UDim2.new(0, 0, 1, 0)
loadingBar.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
